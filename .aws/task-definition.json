{
    "family": "python-s3-webapp-v2",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "1024",
    "memory": "2048",
    "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/python-s3-webapp-ecs-role-development",
    "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/python-s3-webapp-ecs-task-role-development",
    "containerDefinitions": [
        {
            "name": "backend",
            "image": "",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 5000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "S3_BUCKET_NAME",
                    "value": "vinodgopinathan-bucket"
                },
                {
                    "name": "AWS_REGION", 
                    "value": "us-east-1"
                },
                {
                    "name": "PROVIDER",
                    "value": "gemini"
                },
                {
                    "name": "MODEL",
                    "value": "gemini-1.5-flash"
                }
            ],
            "secrets": [
                {
                    "name": "AWS_ACCESS_KEY_ID",
                    "valueFrom": "arn:aws:secretsmanager:us-east-1:${AWS_ACCOUNT_ID}:secret:python-s3-webapp/aws-credentials:AWS_ACCESS_KEY_ID::"
                },
                {
                    "name": "AWS_SECRET_ACCESS_KEY", 
                    "valueFrom": "arn:aws:secretsmanager:us-east-1:${AWS_ACCOUNT_ID}:secret:python-s3-webapp/aws-credentials:AWS_SECRET_ACCESS_KEY::"
                },
                {
                    "name": "GEMINI_API_KEY",
                    "valueFrom": "arn:aws:secretsmanager:us-east-1:${AWS_ACCOUNT_ID}:secret:python-s3-webapp/llm-keys:GEMINI_API_KEY::"
                },
                {
                    "name": "OPENAI_API_KEY",
                    "valueFrom": "arn:aws:secretsmanager:us-east-1:${AWS_ACCOUNT_ID}:secret:python-s3-webapp/llm-keys:OPENAI_API_KEY::"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/python-s3-webapp-v2",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "backend"
                }
            },
            "healthCheck": {
                "command": ["CMD-SHELL", "curl -f http://localhost:5000/health || exit 1"],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 60
            }
        },
        {
            "name": "frontend",
            "image": "",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 80,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "REACT_APP_API_URL",
                    "value": "http://${ALB_DNS}"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/python-s3-webapp-v2",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "frontend"
                }
            },
            "healthCheck": {
                "command": ["CMD-SHELL", "curl -f http://localhost:80 || exit 1"],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 30
            }
        }
    ]
}
